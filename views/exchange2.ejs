<% include /app/views/head %>
      <% include /app/views/header2 %>
        <div class="text-center">
            <h1>Book Trading Club</h1>
          </div>

          <div class="col-sm-3 mt-2 mb-2">
          <div class = "card" style = "width:200px; height:375px">

            <p> What will you trade for. if no trade press NO TRADE button </p>
<form action="/trade/request/<%=book._id %>/<%= book._id%>/" method="get" >
  <input type="submit" class="btn btn-info btn-block" value="NO Trade">
</form>
        <p>
          <%  if(book.image) { %>
                        <img src="<%= book.image %>" alt="<%= book.title %>">
                                       <% } else {%>
                                              
                                              <% if (book.imageUrl) { %>
                       <img src = "<%= book.imageUrl %>" alt ="<%= book.title %>">
                                              <% } else  %>
                                              
                                               <% if (book.thumb) { %>
                                              
                        <img src = "<%= book.thumb %>" alt ="<%= book.title %>">  
                                           <%   } %>
          <% } %>
        </p>
          
         <% var booktitle = book.title%>;
              <h5><%=booktitle%></h5>
</div>
</div>
<div>
<br>
<h3>
  you have <%=myBooks.length%>books to trade with.
</h3> 
</div>
<div class="container">
        <!-- columns should be the immediate child of a .row -->
        <h2 class="mt-2">All Books</h2>
      <div class="book-list row">
  <%for(var i=0; i<myBooks.length;i++){%>
  <div class="col-lg-3 mt-2 mb-2">
    <%  if(myBooks[i].image) { %>
                        <img src="<%= myBooks[i].image %>alt =""  >
                                       <% } else %>
                                              
                                              <% if (myBooks[i].imageUrl) { %>
                       <img src = "<%= myBooks[i].imageUrl %>" alt ="" >
                                              <% } else  { %>
                                              
                                               
                        <img src = "<%= myBooks[i].thumb %>" alt =""%>" >
                        <% } %>
    
  
  
  <div class="card-block">
   <a href="/trade/request/<%=book._id %>/<%=myBooks[i]._id %>" class="btn btn-primary ">Offer this book</a> 
  </div>
  </div>
  <%}%>
  
